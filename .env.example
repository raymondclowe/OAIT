# OpenRouter API Configuration (REQUIRED - Only Cloud Dependency)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-3.0-pro

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=7860

# Local Faster-Whisper Configuration
WHISPER_MODEL_SIZE=base  # Options: base, small, medium, large
WHISPER_DEVICE=auto  # Options: auto, cpu, cuda
WHISPER_COMPUTE_TYPE=int8  # Options: int8, float16, float32

# Database Configuration (Local SQLite)
SQLITE_DB_PATH=./memory/oait.db

# Audio Configuration
AUDIO_BUFFER_DURATION=30  # seconds
SILENCE_THRESHOLD=3.0  # seconds

# Vision Configuration
VISION_POLLING_INTERVAL=3.0  # seconds
VISION_CHANGE_THRESHOLD=0.1  # 0.0 to 1.0

# OODA Loop Configuration
INTERVENTION_DELAY_BASE=3.0  # seconds
CONFIDENCE_THRESHOLD=0.7  # 0.0 to 1.0

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/oait.log

# Development
DEBUG=false
RELOAD=false
